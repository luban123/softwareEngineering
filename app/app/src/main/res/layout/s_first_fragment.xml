<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Student.SFirstFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/s_choice_course"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/s1"
            android:layout_marginTop="50sp"/>

        <ImageView
            android:id="@+id/s_join_course"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/s2"
            android:layout_marginTop="30sp"/>

        <ImageView
            android:id="@+id/s_wait_qd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/s3"
            android:layout_marginTop="30sp"/>

        <ImageView
            android:id="@+id/s_have_qd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/s4"
            android:layout_marginTop="30sp"/>
    </LinearLayout>


</FrameLayout>